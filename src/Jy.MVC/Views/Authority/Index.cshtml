<div class="row">
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">组织机构</h3>
            </div>
            <div class="box-body">
                <div id="treeDiv" class="portlet-body">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">用戶列表</h3>
                <div class="pull-right box-tools">
                    <button id="btnBatchUserRole" title="" class="btn btn-success" type="button" data-original-title="批量设置" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-list"></i>&nbsp;&nbsp;批量设置
                    </button>

                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                        <thead>
                            <tr role="row">
                                <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
                                <th tabindex="0" aria-label="">
                                    用户名
                                </th>
                                <th tabindex="0" aria-label="">
                                    姓名
                                </th>
                                <th tabindex="0" aria-label="">
                                    Email
                                </th>
                                <th tabindex="0" aria-label="">
                                    手机号
                                </th>
                                <th tabindex="0" aria-label="">
                                    描述
                                </th>
                                <th tabindex="0" aria-label="">
                                    有效状态
                                </th>
                                <th tabindex="0" style="width: 230px;" aria-label="">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                    <div class="paging-toolbar">
                        <ul id="grid_paging_part"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
